<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wolfcode.crm.mapper.RoleMapper">
  <resultMap id="BaseResultMap" type="cn.wolfcode.crm.domain.Role">
    <id column="id" property="id" />
    <result column="name" property="name" />
    <result column="sn" property="sn" />

    <!--角色与权限多对多-->
    <collection property="permissions" column="id"
                select="cn.wolfcode.crm.mapper.PermissionMapper.getPermissionsByRoleId"/>
  </resultMap>
  <delete id="deleteByPrimaryKey">
    delete from role
    where id = #{id}
  </delete>
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into role (name, sn)
    values (#{name}, #{sn})
  </insert>
  <update id="updateByPrimaryKey">
    update role
    set name = #{name},
      sn = #{sn}
    where id = #{id}
  </update>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap">
    select id, name, sn
    from role
    where id = #{id}
  </select>
  <select id="selectAll" resultMap="BaseResultMap">
    select id, name, sn
    from role
  </select>


  <!--查数据-->
  <select id="selectForList" resultMap="BaseResultMap">
    select r.id, name, r.sn from role r
  </select>

  <!--维护关系-->
  <insert id="insertRelation">
    insert into role_permission(role_id, permission_id)
     values(#{roleId}, #{pId})
  </insert>

  <!--删除关系-->
  <delete id="deleteRelation">
    delete from role_permission where role_id = #{id}
  </delete>

  <!---通过员工id查询员工用有的角色-->
  <select id="getRoleByEmployeeId" resultType="Role">
    select r.id, r.name, r.sn from role r LEFT  JOIN
      employee_role er on r.id = er.role_id where er.employee_id = #{id}
  </select>

  <select id="selectRoleSnByEmployeeId" resultType="string">
    select r.sn from role r LEFT  JOIN
    employee_role er on r.id = er.role_id where er.employee_id = #{id}
  </select>


</mapper>